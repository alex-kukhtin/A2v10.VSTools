<UserControl x:Class="XamlEditor.SqlScriptPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XamlEditor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="6">
		<Expander Header="Tables" IsExpanded="True" Margin="0,0,0,12">
    		<TextBlock Text="{Binding CreateTableScript}" FontFamily="Consolas" TextWrapping="WrapWithOverflow" Margin="6"/>
		</Expander>
		<Expander Header="Menu" IsExpanded="True" Margin="0,0,0,12">
			<TextBlock Text="{Binding CreateUiScript}" FontFamily="Consolas" TextWrapping="WrapWithOverflow" Margin="6"/>
		</Expander>
	</StackPanel>
</UserControl>
